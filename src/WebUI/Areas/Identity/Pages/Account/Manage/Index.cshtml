@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="div-manage-content">
    <h4>@ViewData["Title"]</h4>

    <div class="div-main" style="flex-wrap: wrap">
        @if (Model.CurrentUser.ProfilePhotoLink == null)
        {
            <img src="~/images/app/shared/no_profile_photo.png" class="profile-photo-manage" />
        }
        else
        {
            <img src="@Model.CurrentUser.ProfilePhotoLink" class="profile-photo-manage" />
        }

        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Username</label>
                <input asp-for="CurrentUser.UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="CurrentUser.Email"></label>
                <input asp-for="CurrentUser.Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.ProfilePhoto"></label>
                <input asp-for="Input.ProfilePhoto" class="form-control" />
                <span asp-validation-for="Input.ProfilePhoto" class="text-danger"></span>
            </div>

            <br />

            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}